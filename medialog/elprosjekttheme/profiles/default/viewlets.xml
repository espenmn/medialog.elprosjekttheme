<?xml version="1.0"?>
<!-- This file holds the setup configuration of the viewlet managers
     for the "Mbanatheme Theme" skin.
     -->

<object>
 	   
<order manager="plone.portalheader" skinname="*">
    <viewlet name="plone.skip_links"/>
 	<viewlet name="plone.logo"/>
	<viewlet name="plone.personal_bar"/>
	<viewlet name="plone.site_actions"/>
	<viewlet name="elprosjekttheme_siteactions"/>
    <viewlet name="plone.searchbox"/>
    <viewlet name="plone.global_sections"/>
	<viewlet name="plone.app.i18n.locales.languageselector"/>
    <viewlet name="plone.path_bar"/>
  </order>
  
  <order manager="plone.portalheader" skinname="Mbanatheme Theme">
    <viewlet name="plone.skip_links"/>
	<viewlet name="elprosjekttheme.topportlets" />
 	<viewlet name="plone.logo"/>
	<viewlet name="plone.personal_bar"/>
	<viewlet name="elprosjekttheme_siteactions"/>
	<viewlet name="plone.site_actions"/>
	<viewlet name="plone.searchbox"/>
    <viewlet name="plone.global_sections"/>
	<viewlet name="plone.app.i18n.locales.languageselector"/>
    <viewlet name="plone.path_bar"/>
  </order>

  <order manager="plone.abovecontent" skinname="Mbanatheme Theme">
     <viewlet name="plone.path_bar"/>
  </order>

  <order manager="plone.portalfooter" skinname="Mbanatheme Theme">
  <viewlet name="elprosjekttheme_colophon" />
  </order>

  <hidden manager="plone.portalheader" skinname="Mbanatheme Theme">
	<viewlet name="plone.path_bar"/>
	<viewlet name="elprosjekttheme_siteactions"/>
	<viewlet name="plone.site_actions"/>
	<viewlet name="plone.app.i18n.locales.languageselector"/>
  </hidden>
 
   <hidden manager="plone.portalfooter" skinname="Mbanatheme Theme">
	<viewlet name="plone.site_actions"/>
	<viewlet name="plone.footer"/>
	<viewlet name="plone.colophon" />
  </hidden>

</object>
